<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    </head>
    <body>

 <div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <div class="card-body">
                        <form action="/imputaciones/add" method="POST">
                            <div class="form-group">
                                <input type="date" class="form-control" name="fecha" placeholder="fecha" aria-label="Default select example" autofocus required>
                            </div>
                            <div class="form-group">
                                <select name="comunidad" class="form-control" id="selector" required>
                                    <option></option>
                                    <option value="Calle del pino canario, 1, Navalcarnero (Madrid)">Calle del pino canario, 1, Navalcarnero (Madrid)</option>
                                    <option value="Calle del rio Ebro, 6, Navalcarnero (Madrid)">Calle del rio Ebro, 6, Navalcarnero (Madrid)</option>
                                    <option value="Avenida Mariana de Austria, 10, Navalcarnero (Madrid)">Avenida Mariana de Austria, 10, Navalcarnero (Madrid)</option>
                                    <option value="Calle de la Cuesta del menor, 5, Navalcarnero (Madrid)">Calle de la Cuesta del menor, 5, Navalcarnero (Madrid)</option>
                                    <option value="Calle de la Constitucion, 2, Navalcarnero (Madrid)">Calle de la Constitucion, 2, Navalcarnero (Madrid)</option>
                                    <option value="Avenida Alemania, 22, Navalcarnero (Madrid)">Avenida Alemania, 22, Navalcarnero (Madrid)</option>
                                    <option value="Calle Rubens, 13, Móstoles (Madrid)">Calle Rubens, 13, Móstoles (Madrid)</option>
                                    <option value="Calle Oslo, 51, Alcorcon (Madrid)">Calle Oslo, 51, Alcorcon (Madrid)</option>
                                    <option value="Avenida de Guadarrama, 1, Sevilla la Nueva (Madrid)">Avenida de Guadarrama, 1, Sevilla la Nueva (Madrid)</option>

                                </select>
                            </div>
                            <div class="form-group row justify-content-center">
                                <div class="col-sm-5">
                                <input class="form-control float-left" type="number" placeholder="Horas" min="0" max="24" name="horas" required>
                            </div>
                            <div class="col-1 text-center">
                                <span>:</span>
                            </div>
                            <div class="col-sm-5">
                                <input class="form-control float-right" type="number" placeholder="Minutos" min="0" max="59" name="minutos" required>
                            </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success">Guardar</button>
                            </div> 
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var initSelector = jQuery.noConflict();
    initSelector(document).ready(function() {
    if(initSelector("#selector").length > 0){
        initSelector('#selector').select2({
        placeholder: 'Selecciona una comunidad',
        allowClear: true,
        language: {
            noResults: function(){
                return "No hay resultados";
            },
            searching: function(){
                return "Buscando...";
            }
        }
    });
    }else{
        console.log("No existe selector");
    }
});
</script>
</body>
</html>