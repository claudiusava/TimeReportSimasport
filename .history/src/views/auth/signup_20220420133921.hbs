<html>
  <body>
    <div class="container p-4">
      <div class="row">
        <div class="col-md-4 mx-auto">
          <div class="card text-center">
            <div class="card-header">
              <div class="card-body">
                <h1>Registrar usuario</h1>
                <br/>
                <form action="/signup" method="POST">
                  <div class="form-group">
                    <input
                      type="text"
                      name="fullname"
                      placeholder="nombre"
                      class="form-control"
                      autofocus
                      required
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="text"
                      name="username"
                      placeholder="usuario"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <input
                      type="password"
                      name="password"
                      placeholder="contraseña"
                      class="form-control"
                      required
                    />
                  </div>
                  <div class="form-group">
                    Permiso de administración:
                    <input
                      type="checkbox"
                      name="permisoDeAdministracion"
                      id="permisoDeAdministracion"
                    />
                  </div>
                  <div class="form-group">
                    <button class="btn btn-success">Registrarse</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
